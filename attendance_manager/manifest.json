{
    "manifest_version": 2,
    "version": "1.0",
    "name": "Attendance Manager",
    "description": "An extension to keep your attendence on track",
    "icons": {
        "128": "attendence.jpg",
        "48": "attendence.jpg",
        "16": "attendence.jpg"
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "attendence.jpg"
    },
    "permissions": [
        "storage",
        "notifications"
    ]
}